<!--Content-->
<div class="content">
    <div class="gis-left">
        <!--左側滑動收合-->

        <div class="btn-toggle l-hide"></div><!--按鈕：左側隱藏-->

        <div class="btn-toggle l-show"></div><!--按鈕：左側展開--->

        <div class="left-accordion">
            <!--Accordion-->
            <!--//一、路口定位設定-->
            <h5>一、路口定位設定</h5>
            <div class="Position-Setup">
                <div class="form-group">
                    <label>1、調查型態：</label>
                    <select class="selectpicker show-menu-arrow form-control">
                        <option>T字路口車流量</option>
                        <option>十字路口車流量</option>
                        <option>行人量調查</option>
                        <option>五叉及五叉以上路口車流量</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>2、路口定位：</label>
                    <div class="input-group">
                        <span class="input-group-addon">行政區：</span>
                        <select class="selectpicker show-menu-arrow form-control">
                            <option>請選擇</option>
                            <option>神岡</option>
                            <option>新社</option>
                        </select>
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">路&nbsp;&nbsp;&nbsp;名：</span>
                        <input type="text" class="form-control" id="" placeholder="請輸入正確路名">
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">路&nbsp;&nbsp;&nbsp;名：</span>
                        <select class="selectpicker show-menu-arrow form-control">
                            <option>請選擇</option>
                            <option>神岡</option>
                            <option>新社</option>
                        </select>
                    </div>
                </div>

                <button type="button" id="next-1" class="btn btn-primary btn-block"><i class="fa fa-map-marker" aria-hidden="true"></i> 定位</button>
            </div>
            <!--//一、路口定位設定-->
            <!--路口指向設定-->
            <h5>二、路口指向設定</h5>
            <div class="direction-setup">
                <div class="form-group">
                    <label>旋轉箭頭：</label>
                    <div class="mb-10">
                        <button type="button" class="btn btn-gray rotate-btn"><i class="fa fa-angle-double-left" aria-hidden="true"></i></button>
                        <button type="button" class="btn btn-gray rotate-btn"><i class="fa fa-angle-left" aria-hidden="true"></i></button>
                        <button type="button" class="btn btn-gray rotate-btn"><i class="fa fa-angle-right" aria-hidden="true"></i></button>
                        <button type="button" class="btn btn-gray rotate-btn"><i class="fa fa-angle-double-right" aria-hidden="true"></i></button>
                    </div>
                </div>
                <div class="form-group">
                    <label>路口指向：</label>
                    <div class="input-group">
                        <span class="input-group-addon">A</span>
                        <input type="text" class="form-control" id="" placeholder="">
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">B</span>
                        <input type="text" class="form-control" id="" placeholder="">
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">C</span>
                        <input type="text" class="form-control" id="" placeholder="">
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">D</span>
                        <input type="text" class="form-control" id="" placeholder="">
                    </div>
                </div>

                <div class="col-xs-6 col-md-6">
                    <button type="button" id="prev-1" class="btn btn-primary btn-block"><i class="fa fa-arrow-left" aria-hidden="true"></i> 上一步</button>
                </div>
                <div class="col-xs-6 col-md-6">
                    <button type="button" id="next-2" class="btn btn-primary btn-block"><i class="fa fa-arrow-right" aria-hidden="true"></i> 下一步</button>
                </div>
            </div>
            <!--//路口指向設定-->
            <!--//三、資料匯入-->
            <h5>三、資料匯入</h5>
            <div class="import-data">
                <div class="form-group">
                    <label>1、調查日期：</label>
                    <input type="text" class="form-control input-sm t_date" id="" placeholder="">
                </div>

                <div class="form-group">
                    <label>2、路口管制說明：</label>
                    <textarea rows="4" cols="36"></textarea>
                </div>

                <div class="form-group">
                    <label>3、資料匯入：</label>
                    <div class="input-group">
                        <label class="file" title=""><input onchange="this.parentNode.setAttribute('title', this.value.replace(/^.*[\\/]/, ''))" type="file"></label>
                        <span class="input-group-btn">
                            <button class="btn" type="button"><i class="fa fa-times" aria-hidden="true"></i></button>
                        </span>
                    </div>
                </div>

                <div class="col-xs-6 col-md-6">
                    <button type="button" id="prev-2" class="btn btn-primary btn-block"><i class="fa fa-arrow-left" aria-hidden="true"></i> 上一步</button>
                </div>
                <div class="col-xs-6 col-md-6">
                    <button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#Modal-upload-success"><i class="fa fa-upload" aria-hidden="true"></i> 上傳檔案</button>
                </div>
            </div>
            <!--//三、資料匯入-->
        </div><!--Accordion end-->
    </div><!--左側滑動收合 end-->
    <!-- 右側地圖區塊-->
    <div class="gis-right">
        <!--gis-right-->
        <!--Google Maps-->
        <div class="gis-map" id="map_canvas"></div>
        <!--//Google Maps-->
    </div><!--//gis-right-->
    <!-- //右側地圖區塊-->
    <div class="clearfix"></div>
</div><!--//Content-->

