@model IQueryOptionMvc<object>
@{
    Layout = null;
}
@using (Html.BeginForm(Model.ActionName, Model.ControllerName, Model.RouteValues, FormMethod.Post, new { @class = "paged-query-form" }))
{
    if (IsSectionDefined("QueryTerms"))
    {

        <div class="panel panel-primary div-SearchBar">
            <!--查詢條件-->
            <div class="panel-heading">
                <a data-toggle="collapse" href="#collapseSearchTool" aria-expanded="false" class="collapse-toggle" style="text-decoration: none;">
                    <span class="panel-table-title">調查資料查詢</span>
                </a>
            </div>
            <div class="panel-body collapse in" id="collapseSearchTool">
                @RenderSection("QueryTerms", false)
            </div>
        </div><!--//查詢條件-->

    }
    <div class="panel panel-primary">
        <div class="panel-heading clearfix">
            <span class="panel-table-title">調查資料列表</span>
            @if (IsSectionDefined("ToggleMenus"))
            {
                @RenderSection("ToggleMenus", false)
            }
        </div>
        @RenderBody()
        @if (Model.Results.IsNullOrEmpty())
        {
            <div class="empty-msg">目前尚无资料</div>
        }
    </div>

    <div class="ibox">
        <div class="ibox-title">
            <div class="ibox-tools">
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                @if (IsSectionDefined("ToggleMenus"))
                {
                    @RenderSection("ToggleMenus", false)
                }
            </div>
        </div>
        <div class="ibox-content">
            @RenderBody()
            @if (Model.Results.IsNullOrEmpty())
            {
                <div class="empty-msg">目前尚无资料</div>
            }
        </div>
    </div>
}